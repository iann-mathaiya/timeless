---
import { auth } from "../lib/auth";
import AppLayout from "../layouts/AppLayout.astro";
import { actions } from "astro:actions";
import { format } from "date-fns";
import { twMerge } from 'tailwind-merge'


const authDetails = await auth.api.getSession({
    headers: Astro.request.headers,
});

if (!authDetails) {
    return Astro.redirect("/join");
}

const { data, error } = await Astro.callAction(actions.media.getUserMedia, {
    userId: authDetails.user.id,
});

const updatedMedia: { mediaData: string[]; createdAt: string }[] = [];

if (data?.success) {
    for (const post of data.userMedia) {
        const media = post.mediaData as unknown as string[];
        const createdAt = post.createdAt as unknown as string;

        const postMediaURLs = await Promise.all(
            media.map(async (fileName) => {
                const { data: URLsData, error } = await Astro.callAction(
                    actions.media.getSignedUrl,
                    { key: fileName },
                );
                return URLsData?.success ? URLsData.signedUrl : fileName;
            }),
        );

        updatedMedia.push({ ...post, createdAt, mediaData: postMediaURLs });
    }
}

const gallery = Object.values(
    updatedMedia.reduce(
        (acc, item) => {
            const date = item.createdAt.split(" ")[0];
            if (!acc[date]) {
                acc[date] = { createdAt: date, mediaData: [] };
            }
            acc[date].mediaData.push(...item.mediaData);
            return acc;
        },
        {} as Record<string, { createdAt: string; mediaData: string[] }>,
    ),
);
---

<AppLayout title="Gallery">
    <section class="p-4 sm:p-8">
        <ul class="flex items-center gap-6">
            {
                gallery.map((post) => (
                    <li>
                        <div class="w-40 sm:w-64 relative">
                            {(post.mediaData as string[]).map((mediaURL, index) => (
                                <img src={mediaURL} alt="" class={twMerge(
                                    "w-40 sm:w-64 absolute top-0 left-0 border-2 border-white rounded-lg",
                                    index === 0 && 'rotate-0',
                                    index === 1 && '-rotate-6',
                                    index === 3 && 'rotate-6',
                                )} />
                            ))}
                        </div>
                        <p class="mt-[6.5rem] sm:mt-[12.5rem] text-sm text-gray-600">{format(post.createdAt, "PP")}</p>
                    </li>
                ))
            }
        </ul>
    </section>
</AppLayout>
