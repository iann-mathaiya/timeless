---
import { auth } from "../lib/auth";
import Logo from "../assets/logo.svg";
import RootLayout from "../layouts/RootLayout.astro";

const authDetails = await auth.api.getSession({
	headers: Astro.request.headers,
});

if (authDetails) {
	return Astro.redirect("/home");
}
---

<RootLayout>
	<section class="mx-auto w-full min-h-screen bg-gradient-to-br from-[#f8f9c7]/80 to-[#f0cd97]/80">
		<div class="pt-28 mx-auto w-full max-w-4xl flex flex-col items-center justify-center">
			<Logo width={40} height={40} fill="currentColor" />
			<h1 class="mt-4 font-serif text-4xl font-medium">
				A space for your day dreams and memories
			</h1>
			<p class="mt-1 text-sm text-gray-600">
				Save anything you want - journal your day with a photo gallery
				built to record your memories
			</p>

			<div class="mt-4 sm:mt-6 flex items-center justify-center gap-3">
				<a href="/join" class="px-4 py-1.5 text-sm text-white bg-gray-900 hover:bg-orange-600 hover:scale-110 rounded-full transition-all duration-300 ease-in-out">
					Join Now
				</a>
				<a href="/sign-in" class="px-4 py-1.5 text-sm font-medium text-gray-900 hover:text-orange-600 hover:bg-orange-200/50 border border-gray-900/30 hover:border-orange-300  hover:scale-110 rounded-full transition-all duration-300 ease-in-out">
					Sign In
				</a>
			</div>

			<div class="mt-8 sm:mt-10 flex flex-col sm:flex-row gap-4">
				<div class="h-96 w-1/3 p-4 border border-gray-900/10 rounded-xl">
					<h2 class="text-lg font-medium text-gray-900">Photo Album</h2>
					<p class="text-sm text-gray-600 text-balance">A picture is worth a thousand words, sometimes its worth a million</p>
				</div>

				<div class="h-96 w-1/3 p-4 border border-gray-900/10 rounded-xl">
					<h2 class="text-lg font-medium text-gray-900">Reels Cassette</h2>
					<p class="text-sm text-gray-600 text-balance">Because no art passes our conscience in the way film does</p>
				</div>

				<div class="h-96 w-1/3 p-4 relative border border-gray-900/10 rounded-xl">
					<h2 class="text-lg font-medium text-gray-900">Family and Friends</h2>
					<p class="text-sm text-gray-600 text-balance">For the BBQ saturdays and the random hangouts that turned out to be crazy adventures</p>
				</div>

			</div>

			<footer class="mt-2.5 w-full flex items-center justify-between">
				<p class="text-sm text-gray-600">&copy; {new Date().getFullYear()} | MIT License</p>
				<p class="font-serif italic text-lg text-gray-900">Alter the timeline.</p>
			</footer>
		</div>
	</section>
</RootLayout>
